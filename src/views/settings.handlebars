<div class="container">

  <div class="card-view">
    {{#each tabela}}

    <div class="flip-card-settings">
      <div class="flip-card-inner">

        <div class="flip-card-front">
          <p>{{this.nomeFila}}</p>
          <p>{{this.enderecoFila}}</p>
        </div>

        <div class="flip-card-back">
          <form method="post" action="/settings/{{this.nomeFila}}">
            <button type="submit" class="submit-settings-delete">
              <i class="fa-solid fa-circle-xmark fa-fw fa-3x"></i>
            </button>
          </form>
        </div>

      </div>
    </div>

    {{/each}}
  </div>

  <a href="#modal-settings-add">
    <button class="btn-float-1">+</button>
  </a>

  <form method="get" action="/settings/add/csv">
    <button class="btn-float-1 btn-float-2">
      <i class="fa-solid fa-file-csv fa-fw fa-1x"></i>
    </button>
  </form>

</div>

<div id="modal-settings-add" class="modal">
  <div class="modal-content">
    <h1>Adicionar impressora</h1>

    <form method="post" action="/settings/add/printer">

      <div class="form-group">
        <label for="nomeFila">Hostname</label>
        <input type="text" id="nomeFila" name="nomeFila" placeholder="Hostname" required />
      </div>

      <div class="form-group">
        <label for="enderecoFila">IP</label>
        <input type="text" id="enderecoFila" name="enderecoFila" placeholder="EndereÃ§o IP" required
          pattern="^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$" />
      </div>

      <div class="modal-buttons">
        <button type="submit" class="modal-button btn-confirm">Enviar</button>
        <a href="#" class="modal-button btn-cancel">Fechar</a>
      </div>

    </form>

  </div>
</div>